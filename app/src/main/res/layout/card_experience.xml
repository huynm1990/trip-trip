<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_experience"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:columnCount="6"
        android:rowCount="6">

        <TextView
            android:id="@+id/txt_title"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1.0"
            android:scaleType="centerCrop"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="6" />

        <TextView
            android:id="@+id/txt_date_created"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:textStyle="italic"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/img_thumb_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/ic_thumb_up_black_24dp"/>

        <TextView
            android:id="@+id/txt_thumb_up"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="12"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_row="3"
            android:layout_column="2"
            android:src="@drawable/ic_favorite_black_24dp"/>

        <TextView
            android:id="@+id/txt_favorite"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:text="24"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/img_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_row="3"
            android:layout_column="4"
            android:src="@drawable/ic_visibility_black_24dp"/>

        <TextView
            android:id="@+id/txt_visibility"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="5"
            android:text="65"
            android:textSize="10sp"/>

    </GridLayout>

</android.support.v7.widget.CardView>