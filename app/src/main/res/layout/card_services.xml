<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_experience"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="4dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:columnCount="10"
        android:rowCount="6">

        <TextView
            android:id="@+id/txt_title"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="10"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1.0"
            android:scaleType="centerCrop"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="10" />

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/ic_phone_black_15dp"/>

        <TextView
            android:id="@+id/txt_phone"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="9"
            android:text="0903167899"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_row="4"
            android:layout_column="0"
            android:src="@drawable/ic_place_black_15dp"/>

        <TextView
            android:id="@+id/txt_location"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="9"
            android:text="Ho Chi Minh"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_row="5"
            android:layout_column="0"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="3"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="4"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="5"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="6"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="7"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="8"
            android:src="@drawable/ic_favorite_border_10dp"/>
        <ImageView
            android:id="@+id/img_favorite9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="9"
            android:src="@drawable/ic_favorite_border_10dp"/>

    </GridLayout>

</android.support.v7.widget.CardView>
