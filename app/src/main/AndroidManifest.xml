<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.org.triptrip">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/triptrip_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"
                  android:label=""
                  android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/txt_activity_login" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".activity.EventsActivity"
            android:label="Events" />
        <activity
            android:name=".activity.ExperiencesActivity"
            android:label="Experiences" />
        <activity
            android:name=".activity.ServiceDetailActivity"
            android:label="Service Detail" />
        <activity
            android:name=".activity.QuestionsAnswersActivity"
            android:label="Q and A" />
    </application>

</manifest>